body
	margin-top 58px

.row
	margin 0px;

.main-menu, .signup
	.menuactive
		a
			border-bottom 2px solid #F33C36
			color #F33C36 !important

.navbar-default
	.navbar-nav
		& > li
			& > a
				color #7D7171
				font-size 16px
				font-weight 600
				&:hover
					// background-color #F33C36
					color #F33C36
				&:active
					color #F33C36

.user-space
	a
		// margin-bottom 2px !important

.navbar-default .navbar-nav
	& > .open
		& > a, a:focus
			background none

.dropdown-menu
	border none

.navbar
	border-radius 0px
	border none
	border-radius 0px
	margin 0px
	background-color #ffffff
	box-shadow 0 0 5px rgba(0, 0, 0, 0.75)
	z-index 999

.navbar-nav
	li
		a
			padding 0px
			margin 0px

.navbar-header a.navbar-brand
	h6
		color #ccc

.navbar-default .navbar-collapse, .navbar-default .navbar-form
	border none

.navbar-form
	margin-top 0px
	margin-bottom 0px
	display inline-block
	padding 12px 12px 12px 0px
	.form-group
		margin-left 10px
	button
		margin-left 10px

.main-menu, .signup
	li
		a
			padding 20px 20px 17px 20px
			margin 0px

footer
	padding-left 15px
	padding-right 15px
	p
		margin 0 0 10px;

.toast-top-right
	top 70px

.toast-success
	background-color #13987e

ul, li, .list-inline
	padding 0
	margin 0

a
	&:focus
		outline none
		border none

.box
	max-width 150px
	text-align center
	border-radius 20px

.car-menus
	padding-bottom 200px

.car-menu-row
	margin-top 20px

.main-search
	h1
		color #ffffff

.search-bar
	position relative
	h1
		text-shadow: 0px 0px 15px #000000;
	input
		height 40px
		font-size 20px
		border-radius 30px

.main-big
	background: url(../img/background/3.jpg) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	height 700px

.footer-container
	border-top 1px solid #e5e5e5
	padding 36px
	text-align center

.jumbotron
	background none

.footer-menu
	margin 15px 0px 5px 0px

.news-img
	margin 10px

.featured
	background-color #F33C36

.featured-inner
	margin 50px 0px

.featured-inner
	.tabset
		.nav-tabs
			.active
				& > a
					background-color #C0291D
					border none
					border-radius 18px
					border 2px solid #C0291D

.featured-inner
	.tabset
		& > .nav-tabs
			& > .active
				& > a
					&:hover
						background-color #C0291D
						border-radius 18px
						margin 0px
						border 2px solid #C0291D



.featured-inner
	.tabset
		& > .nav-tabs
			& > li
				margin 0px
				padding-right 5px
				& > a
					background none
					border none
					color #ffffff
					margin 0px
					border 2px solid #F33C36
					border-radius 20px
					&:hover
						background none
						border 2px solid #C0291D
						color #ffffff
						border-radius 18px
						cursor pointer
				&.active
					& > a
						&:focus
							background-color #C0291D
							border 2px solid #C0291D
							color #ffffff
							border-radius 18px
		& > .nav
			background none
			border none
			margin 10px 0px
			border-radius 20px

.searchBox
	position absolute
	z-index 999999
	width 100%

.category-link
	color #000000
	&:hover
		text-decoration none
		color #000000

.panel-default
	& > .panel-heading
		// background-color #F33C36
		border none

.full-back
	color #eeeeee
	background-color #000000
	background: url(../img/background/bg5.jpg) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	.overview
		.page-header
			border none
			h1, h2
				text-shadow: 0px 0px 10px #000000;
		.specs-overview
			margin 20px 40px 40px 40px
			padding 20px
			display inline-block
			border-radius 20px
			box-shadow 0px 0px 10px #000000 inset
			ul
				li
					list-style none
	.car-image-div
		padding-top 200px
		margin-bottom 50px

.signup-full, .profile-full
	padding-top 50px
	background: url(../img/background/5.jpg) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	height 700px
	.form-div
		margin-left 50px
		width 50%
		h1, label
			color #ffffff
		small
			color #eeeeee
		.form-group
			margin 20px 0px