.signup-full
	.form-div
		form.form-horizontal(name="signupForm")
			fieldset
				legend
					h1 Signup <small>or Login...</small>
				.form-group
					label.col-md-2.control-label(for="email") Email
					.col-md-10
						input.form-control(type="email", name="email", placeholder="Email", ng-model="email", required)
				.form-group
					label.col-md-2.control-label(for="password") Password
					.col-md-10
						input.form-control(type="password", name="password", placeholder="Password", ng-model="password", required)
				.form-group
					label.col-md-2.control-label(for="firstName") First Name
					.col-md-10
						input.form-control(type="text", name="firstName", placeholder="First Name", ng-model="firstName", required)
				.form-group
					label.col-md-2.control-label(for="lastName") Last Name
					.col-md-10
						input.form-control(type="text", name="lastName", placeholder="Last Name", ng-model="lastName", required)
				.form-group
					.col-md-10.col-md-offset-2
						.pull-right
							button.btn.btn-danger(ng-click="signup()", ng-disabled="signupForm.$invalid") Submit
							| &nbsp;
							a.btn.btn-default(href="/") Cancel